package br.com.ingenium.dao;

import javax.persistence.EntityManager;
import javax.persistence.EntityManagerFactory;
import javax.persistence.Persistence;

import br.com.ingenium.model.Usuario;

public class UsuarioDAO {

	public void salvar() {
		EntityManagerFactory emf = Persistence.createEntityManagerFactory("ingeniumPU");
		EntityManager em = emf.createEntityManager();

		Usuario usuario = new Usuario();

		usuario.setUsuario("Wesleyosantos91");
		usuario.setNome("Wesley Oliveira");
		usuario.setDescricao(" Teste ");
		usuario.setEmail("wesleyosantos91@gmail.com");
		usuario.setConfirmacaoEmail("wesleyosantos91@gmail.com");
		usuario.setSenha("12345");
		usuario.setConfirmacaoSenha("12345");

		em.getTransaction().begin();

		if (usuario.getEmail() == usuario.getConfirmacaoEmail()
				&& usuario.getSenha() == usuario.getConfirmacaoSenha()) {
			em.persist(usuario);
			em.getTransaction().commit();
			System.out.println("Salvo com sucesso");
		} else {
			em.getTransaction().rollback();
		}
	}

}
